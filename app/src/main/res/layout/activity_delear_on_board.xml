<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.softeksol.paisalo.dealers.DealerOnBoard">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <!-- Business Details Layout-->

            <LinearLayout
                android:id="@+id/layout_BusinessDetails"
                android:visibility="visible"
                android:padding="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/scada_bold"
                    android:textSize="25dp"
                    android:text="Business Details"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/tilUidDob"
                    android:layout_marginBottom="7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tilUidDob"
                    app:cardCornerRadius="@dimen/spacing_medium"
                    android:layout_margin="@dimen/spacing_medium"
                    app:cardElevation="5dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:paddingLeft="8dp"
                        android:layout_height="45dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/dealerfirmName"
                            android:hint="Firm Name"
                            android:inputType="textCapWords"
                            android:capitalize="characters"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/tilUidDob"
                    android:layout_marginBottom="7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tilUidDob"
                    app:cardCornerRadius="@dimen/spacing_medium"
                    android:layout_margin="@dimen/spacing_medium"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/scada_bold"
                            android:text="Firm Type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <CheckBox
                                android:id="@+id/dealerproprietorCheckBox"
                                android:text="PROPRIETOR"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <CheckBox
                                android:id="@+id/dealerpartnershipCheckBox"
                                android:text="PARTNERSHIP"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <CheckBox
                            android:id="@+id/dealerprivateCheckBox"
                            android:text="PRIVATE LIMITED"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/scada_bold"
                    android:textSize="15dp"
                    android:text="Select Creator"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toEndOf="@id/tilUidDob"
                    android:layout_marginBottom="7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tilUidDob"
                    app:cardCornerRadius="@dimen/spacing_medium"
                    android:layout_margin="@dimen/spacing_medium"
                    app:cardElevation="5dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_height="40dp"
                        android:id="@+id/dealerspinnerCreator"/>
                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/scada_bold"
                    android:textSize="15dp"
                    android:text="Select OEM"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toEndOf="@id/tilUidDob"
                    android:layout_marginBottom="7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tilUidDob"
                    app:cardCornerRadius="@dimen/spacing_medium"
                    android:layout_margin="@dimen/spacing_medium"
                    app:cardElevation="5dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_height="40dp"
                        android:id="@+id/dealerspinnerChooseOEM"/>
                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/scada_bold"
                    android:textSize="15dp"
                    android:text="Brand Details"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toEndOf="@id/tilUidDob"
                    android:layout_marginBottom="7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tilUidDob"
                    app:cardCornerRadius="@dimen/spacing_medium"
                    android:layout_margin="@dimen/spacing_medium"
                    app:cardElevation="5dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_height="40dp"
                        android:id="@+id/dealerspinnerBrand"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/tilUidDob"
                    android:layout_marginBottom="7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tilUidDob"
                    app:cardCornerRadius="@dimen/spacing_medium"
                    android:layout_margin="@dimen/spacing_medium"
                    app:cardElevation="5dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:paddingLeft="8dp"
                        android:layout_height="50dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/dealerVal_firmaddress"
                            android:hint="Office Address"
                            android:capitalize="characters"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@id/tilUidDob"
                        android:layout_marginBottom="7dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tilUidDob"
                        app:cardCornerRadius="@dimen/spacing_medium"
                        android:layout_margin="@dimen/spacing_medium"
                        app:cardElevation="5dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:paddingLeft="8dp"
                            android:layout_height="45dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/dealerVal_pancard"
                                android:hint="Pan No."
                                android:capitalize="characters"
                                android:background="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@id/tilUidDob"
                        android:layout_marginBottom="7dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tilUidDob"
                        app:cardCornerRadius="@dimen/spacing_medium"
                        android:layout_margin="@dimen/spacing_medium"
                        app:cardElevation="5dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:paddingLeft="8dp"
                            android:layout_height="45dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/dealerVal_GST"
                                android:hint="GST No."
                                android:capitalize="characters"
                                android:background="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@id/tilUidDob"
                        android:layout_marginBottom="7dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tilUidDob"
                        app:cardCornerRadius="@dimen/spacing_medium"
                        android:layout_margin="@dimen/spacing_medium"
                        app:cardElevation="5dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:paddingLeft="8dp"
                            android:layout_height="45dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/dealerVal_Mobile"
                                android:hint="Mobile No."
                                android:capitalize="characters"
                                android:inputType="number"
                                android:background="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@id/tilUidDob"
                        android:layout_marginBottom="7dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tilUidDob"
                        app:cardCornerRadius="@dimen/spacing_medium"
                        android:layout_margin="@dimen/spacing_medium"
                        app:cardElevation="5dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:paddingLeft="8dp"
                            android:layout_height="45dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/dealerVal_EmailOEM"
                                android:hint="Email"
                                android:inputType="textEmailAddress"
                                android:background="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>




                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/tilUidDob"
                    android:layout_marginBottom="7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tilUidDob"
                    app:cardCornerRadius="@dimen/spacing_medium"
                    android:layout_margin="@dimen/spacing_medium"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:padding="3dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:fontFamily="@font/scada_regular"
                                style="@style/InputLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="" />
                            <TextView
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:fontFamily="@font/scada_regular"
                                style="@style/InputLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="State" />


                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:padding="1.5dp"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_bggrey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/dealerVal_firmpincode"
                                    android:hint="PinCode"
                                    android:inputType="number"
                                    android:background="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginRight="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_bggrey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/dealerfirm_State"
                                    android:background="@null"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="@dimen/input_label_horizontal_spacing" />
                            </LinearLayout>



                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/tilUidDob"
                    android:layout_marginBottom="7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tilUidDob"
                    app:cardCornerRadius="@dimen/spacing_medium"
                    android:layout_margin="@dimen/spacing_medium"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:padding="3dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:fontFamily="@font/scada_regular"
                                style="@style/InputLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="District" />
                            <TextView
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:fontFamily="@font/scada_regular"
                                style="@style/InputLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="City" />



                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_bggrey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/dealerfirm_District"
                                    android:background="@null"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="@dimen/input_label_horizontal_spacing" /> </LinearLayout>
                            <LinearLayout
                                android:layout_marginRight="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_bggrey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/dealerfirm_City"
                                    android:layout_width="match_parent"
                                    android:background="@null"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="@dimen/input_label_horizontal_spacing" /> </LinearLayout>



                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/tilUidDob"
                    android:layout_marginBottom="7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tilUidDob"
                    app:cardCornerRadius="@dimen/spacing_medium"
                    android:layout_margin="@dimen/spacing_medium"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:padding="3dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:fontFamily="@font/scada_regular"
                                style="@style/InputLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sin No." />
                            <TextView
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:fontFamily="@font/scada_regular"
                                style="@style/InputLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Type" />



                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_bggrey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/dealerfirm_SIN"
                                    android:background="@null"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="@dimen/input_label_horizontal_spacing" /> </LinearLayout>
                            <LinearLayout
                                android:layout_marginRight="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_bggrey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <Spinner
                                    android:id="@+id/dealerSpin_Sin_Type"
                                    android:layout_width="match_parent"
                                    android:background="@null"
                                    android:entries="@array/OEMSINType"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="@dimen/input_label_horizontal_spacing" /> </LinearLayout>



                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RecViewDealerPartners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btnAddDealerPartner"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Add Partner"
                    android:textColor="@color/white"
                    android:textSize="17dp"/>
            </LinearLayout>

        </LinearLayout>






    </ScrollView>
</LinearLayout>